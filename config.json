{
	"source": "./contents",
	"output": "./public",
	"port": 5401,
	"locals": {
		"url": "http://aintaer.com",
		"title": "Aincom",
		"owner": "Aintaer",
		"description": "Tautologies are Tautological"
	},
	"plugins": {
		"metalsmith-ignore": ["**/.*", "**/test", "js/nbd/dist", "js/nbd/docs"],
		"./plugins/gitmeta": {},
		"metalsmith-metadata": {
			"authors": "metadata/authors.json"
		},
		"metalsmith-collections": {
			"articles": {
				"pattern": "articles/*.md",
				"sortBy": "date",
				"reverse": true
			}
		},
		"metalsmith-paginate": {
			"perPage": 10
		},
		"metalsmith-markdown": {
			"smartypants": true,
			"gfm": true
		},
		"metalsmith-templates": {
			"engine": "handlebars",
			"default": "default.mustache",
			"directory": "templates",
			"pattern": "**/*.html",
			"partials": {
				"head": "partials/head",
				"header": "partials/header",
				"navigation": "partials/navigation",
				"footer": "partials/footer"
			}
		},
		"metalsmith-less": {
			"parse": {
				"paths": ["contents/css/"]
			}
		},
		"./plugins/es6": {
			"ignore": ["js/*.js", "js/nbd/**"],
			"modules": "amd"
		}
	}
}
